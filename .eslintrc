{
    "extends": "airbnb-base",
    "env": {
      "es6": true
    },
    "rules": {
      "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["req", "socket"] }],
      "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
      "no-console": 0,
      "no-underscore-dangle": ["error", { "allow": ["_id", "_source"] }],
      "class-methods-use-this": 0,
      "no-restricted-syntax": 0,
      "prefer-const": 0,
      "no-await-in-loop": 0,
      "global-require": 0,
      "indent": ["error", 2],
      "no-multi-spaces": 0,
      "consistent-return": 0,
      "no-nested-ternary": 0,
      "no-return-await": 0,
      "no-confusing-arrow": 0,
      "guard-for-in": 0
    }
  }